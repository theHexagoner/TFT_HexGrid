@using HexGridInterfaces.SvgHelpers
@using HexGridInterfaces.Structs

<CascadingValue Value="this">
    <svg @ref="Svg" xmlns="http://www.w3.org/2000/svg" viewBox="@ViewBox.ToString()">
        <rect x="@ViewBox.OriginX" y="@ViewBox.OriginY" width="100%" height="100%" fill="@BackgroundFill" stroke="#000000" stroke-width="1" />
        <g id="Grid" >
            <g id="Hexagons" stroke="@HexStroke" stroke-width="@HexStrokeWidth" fill="@HexFill">
                @foreach (ISvgHexagon h in Hexagons.Values)
                {
                    <BPolygon @key="h" Id="@h.ID" Points="@h.Points" IsSelected="@h.IsSelected" StarD="@h.CenterD" />
                }
            </g>
            <g id="Megahexes" stroke="@MegaStroke" stroke-width="@MegaStrokeWidth">
                @foreach (SvgMegagon m in Megagons.Values)
                {
                    <BPath @key="m" Id="@m.Id" D="@m.D" />
                }
            </g>
        </g>
    </svg>
</CascadingValue>
